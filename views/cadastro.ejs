                            </fieldset>

                            <label class="tLb8" for="idiomaTurista">Idioma de Preferência</label>
                            <select class="tInpt8" name="idiomaTurista" required>
                                <option value="">Escolha seu idioma...</option>
                                <option value="DE">Alemão</option>
                                <option value="AR">Árabe</option>
                                <option value="BN">Bengali</option>
                                <option value="ZH">Chines (Mandarin)</option>
                                <option value="ES">Espanhol</option>
                                <option value="FR">Frances</option>
                                <option value="HI">Hindi</option>
                                <option value="EN">Inglês</option>
                                <option value="JA">Japones</option>
                                <option value="PT-BR">Portugues</option>
                                <option value="RU">Russo</option>
                            </select>
                            
                            <label class="tLb9" for="telTurista">Telefone:</label>
                            <input class="tInpt9" name="telTurista" type="text" placeholder="Telefone" required>

                            <label class="tLb10" for="emailTurista">Email:</label>
                            <input class="tInpt10" name="emailTurista" type="text" placeholder="EMAIL" required>

                            <label class="tLb11" for="passwordTurista">Senha:</label>
                            <input class="tInpt11" name="passwordTurista" type="password" placeholder="Defina uma senha" required>

                            <button type="submit" class="btnCadastro turistBtn">CADASTRAR</button>
                        </form>
                    </div>
                </div>
            </section>
