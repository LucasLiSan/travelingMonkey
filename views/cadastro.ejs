                            <line class="right" x1="300" y1="0" x2="300" y2="1380"/>
                        </svg>
                        <h3>
                            <img src="imgs/icons/iconGuia.webp" alt="Icone ponto turistico">
                        </h3>
                        <span>Guia</span>
                        <form class="specific-form guides" action="/createUser" method="POST">
                            <input type="text" name="profile" value="guia" hidden>

                            <label class="gLb1" for="nomeGuia">Nome:</label>
                            <input class="gInpt1" name="nomeGuia" type="text" placeholder="Insira seu nome" required>

                            <label class="gLb2" for="cadGuia">Número de Cadastro:</label>
                            <input class="gInpt2" name="cadGuia" type="text" placeholder="Insira seu Cadastro" required>

                            <div class="motorista">
                                <label class="gLb3" for="motorGuia">Motorista:</label>
                                <label class="mLb1">SIM</label>
                                <input class="gInpt3" name="motorGuia" type="radio" value="Sim" required>
                                <label class="mLb2">NÃO</label>
                                <input class="gInpt4" name="motorGuia" type="radio" value="Não" required>
                            </div>

                            <label class="gLb4" for="telGuia">Telefone:</label>
                            <input class="gInpt5" name="telGuia" type="text" placeholder="Telefone" required>

                            <label class="gLb5" for="idiomaGuia">Idioma Principal</label>
                            <select class="gInpt6" name="idiomaGuia" required>
                                <option value="">Escolha seu idioma...</option>
                                <option value="DE">Alemão</option>
                                <option value="AR">Árabe</option>
                                <option value="BN">Bengali</option>
                                <option value="ZH">Chines (Mandarin)</option>
                                <option value="ES">Espanhol</option>
                                <option value="FR">Frances</option>
                                <option value="HI">Hindi</option>
                                <option value="EN">Inglês</option>
                                <option value="JA">Japones</option>
                                <option value="PT-BR">Portugues</option>
                                <option value="RU">Russo</option>
                            </select>
                            
                            <label class="gLb6" for="emailGuia">Email:</label>
                            <input class="gInpt7" name="emailGuia" type="text" placeholder="EMAIL" required>

                            <label class="gLb7" for="passwordGuia">Senha:</label>
                            <input class="gInpt8" name="passwordGuia" type="password" placeholder="Defina uma senha" required>

                            <button type="submit" class="btnCadastro btnGuide">CADASTRAR</button>
                        </form>
                    </div>
